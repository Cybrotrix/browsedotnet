@model BrowseDotNet.Web.Models.RootDirectoryViewModel

@{
    ViewBag.Title = "BrowseDotNET";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #RootDirectoryPath {
        max-width: 400px;
    }
</style>

<div class="container">
    <div class="page-header">
        <h2>Scan and register multiple Solutions <small>Enter the root directory to scan.</small></h2>
    </div>

    <ol class="breadcrumb">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>Register</li>
        <li class="active">Scan Solutions</li>
    </ol>

    <div class="row">
        <div class="col-md-8">
            <h4>Root path directory selection</h4>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.RootDirectoryPath, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.RootDirectoryPath, new { htmlAttributes = new { @class = "form-control", placeholder = @"Disk:\RootPath\EndingWithSlash\", @style = "width:400px" } })
                            @Html.ValidationMessageFor(model => model.RootDirectoryPath, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-primary btn-sm" value="Select Directories" />
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <section>
                <h4>Instructions</h4>
                <hr />
                <div>
                    <p>
                        @*Enter appropriate values for your Solution. The Solution Path value must be the file path to the solution file.*@
                        <div class="panel-group" id="accordion">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion"
                                           href="#questionOne">
                                            Root Directory
                                        </a>
                                    </h4>
                                </div>
                                <div id="questionOne" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        Enter the root directory you want to scan for .NET Solutions. Make sure the path ends with slash (\)
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion"
                                           href="#questionTwo">
                                            Usage
                                        </a>
                                    </h4>
                                </div>
                                <div id="questionTwo" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        If Root directory selected is valid, you will be asked to select child folders to be scanned for .NET Solutions.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
