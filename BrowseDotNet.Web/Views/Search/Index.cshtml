@model BrowseDotNet.Web.Models.SearchKeyViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header">
        <h2>Search results <small>Term used: <i>"@ViewBag.SearchQuery"</i></small></h2>
    </div>

    <ol class="breadcrumb">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li class="active">Search</li>
    </ol>

    @if (Model.Solutions.Count() > 0)
    {
        <div class="container">
            <div class="page-header">
                <h4>Solutions found <small>@Model.Snippets.Count()</small></h4>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @foreach (var solution in Model.Solutions)
                    {
                        @Html.Partial("_Solution", solution)
                    }
                </div>
            </div>
        </div>
    }

    @if (Model.Snippets.Count() > 0)
    {
        <div class="container">
            <div class="page-header">
                <h4>Snippets found <small>@Model.Snippets.Count()</small></h4>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @foreach (var snippet in Model.Snippets)
                    {
                        @Html.Partial("_Snippet", snippet)
                    }
                </div>
            </div>
        </div>
    }

</div>
